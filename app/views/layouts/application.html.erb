<head>
  <meta charset="utf-8">
   <%= csrf_meta_tag %>

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Bijou</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Place favicon.ico and apple-touch-icon.png in the root directory: mathiasbynens.be/notes/touch-icons -->
 
  <!-- jQuery & jQuery UI -->
  <%= stylesheet_link_tag "application" %>        
	<script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4e5c782a66f297f6"></script>
  <%= javascript_include_tag "application" %>

</head>

<body>	
<div id="wrapper"> 
<% unless logged_in? %>
<div class="b-head-bg">
  <div class="container_16">
 	<div class="b-head__logo grid_3">
		<%= link_to_unless_current image_tag('logo.png', :class => 'l-left'), '/' %>
		</a>           
	</div>  
	<div class="grid_11 b-head__menu">
	   <table class="b-head__menu_table">
		<tr>
			<td>
				<div class="t-medium">У вас пропал человек</div>
				<div class="b-head__menu_description">
					Все будут искать потеряшку
				</div>   
				<%= button_to 'Создайте объявление', '/add_missing/common', :class => "black" %> 
			</td>
			<td>
				<div class="t-medium">Вы детектив</div>
				<div class="b-head__menu_description">
					Найдите себе клиентов
				</div>   
				<%= button_to 'Зарегистрируйтесь', '/singup/detective', :class => "black"  %> 
			</td>                                
			<td>
				<div class="t-medium">Доброволец</div>
				<div class="b-head__menu_description">
					Ты можешь помочь в поиске потеряшек
				</div>   
				<%= button_to 'Стать добровольцем', '/singup/volunteer', :class => "black"  %> 
			</td>              
		</tr>
		</table>   	
	</div>
    <div class="b-head__auth grid_1">  
		<input class="b-head__login black" type="button" value="Войти" />
		<div class="b-head__login_form">                                    
			<%= form_tag sessions_path, :tabindex => 1 do %>   
			<%= text_field_tag :email, params[:email], :class => "b-head__login_form_text", :placeholder => "эл. почта или телефон", :tabindex => 2 %>
				<%= text_field_tag :password, "", :class => "b-head__login_form_text", :placeholder => "пароль", :tabindex => 3 %>
			<p class="b-head__block">
				<%= check_box_tag :remember_me, 1 %> <%= label_tag :remember_me, "запомниь меня", :tabindex => 4 %>
			</p>
			<p class="b-head__block">  
				<%= submit_tag "Войти", :class => "t-medium", :tabindex => 5 %>
			</p>
			<p class="b-head__block">
				<a href="#">вспомнить пароль</a>
			</p>   
			<% end %>
		</div>     
	</div>                  
	<% if defined? current_user.has_missing? %>
	<div class="clear"></div>
	<div class="grid_16">
		<ul class="b-missing__tabs">
			<%= link_to_unless_current content_tag("li", "Объявление", :class => "b-missing__tab"), missing_path(current_user.missings.first), :class => "b-missing__tab_link"  %>    
			<%= link_to_unless_current content_tag("li", "Сводка по объявлению", :class => "b-missing__tab"), '/report', :class => "b-missing__tab_link" %>
		</ul>
	</div>	
	<% end %>
  </div>      
 </div>  
<% else %> 
<div class="b-head-bg__logged">
  <div class="container_16">
 	<div class="b-head__logo grid_3">
		<%= link_to_unless_current image_tag('logo.png', :class => 'l-left'), '/' %>
		</a>           
	</div>  
	<div class="grid_11 b-head__menu">
	   <table class="b-head__menu_table">
		<tr>
			<td>
				<div class="b-head__logined">Для вас есть новости, <%= current_user.username %>.<br/> 
			</td>              
		</tr>
		</table>   	
	</div>
    <div class="b-head__auth grid_1">  
	    
		<%= button_to "Выйти", '/logout', :class => "black" %>  
  
 
	</div>                 
	<div class="clear"></div>
	<div class="grid_16 b-missing__tabs">
		<ul class="b-missing__tabs">      
			<% if current_user.has_missing? %>			
			<%= link_to_unless_current content_tag("li", "Объявление", :class => "b-missing__tab"), missing_path(current_user.missings.first), :class => "b-missing__tab_link"  %>    
			<%= link_to_unless_current content_tag("li", "Сводка по объявлению", :class => "b-missing__tab"), '/report', :class => "b-missing__tab_link" %>     
			<% else %>
			<%= link_to_unless_current content_tag("li", "Сводка", :class => "b-missing__tab"), '/report', :class => "b-missing__tab_link" %>
			<% end %>
		</ul>
	</div>	   
	
  </div>      
 </div>
<% end %>    

  <div class="clear"></div> 
  <%= yield %> <!--! end of #container -->

  <div class="clear"></div>

</div>
<!-- end div#wrapperer -->

<div id="footer">
  <hr class="b-hr" />
  <div class="container_16">
	  <table class="b-footer">
	  <tr>
		<td class="b-footer__statistic">
			<p>Мы помогли найти 1042 человек. Сейчас в розыске 14 132 человек, <a href="#">помогите их найти</a></p>
		</td>
		<td class="b-footer__nav">
			<ul class="b-footer__nav_list">
				<li class="b-footer__nav_element"><a href="#">Что это такое?</a></li>
				<li class="b-footer__nav_element"><a href="#">Обратная связь</a></li>
			</ul>
		</td>
		<td class="b-footer__copyright">
			<p>&copy; 2011 Bijou people &mdash; поиск пропавших безвести</p>
		</td>
	  </table>
  </div>
</div>
  <!-- JavaScript at the bottom for fast page loading -->


  <!-- mathiasbynens.be/notes/async-analytics-snippet Change UA-XXXXX-X to be your site's ID -->
  <script>
    var _gaq=[['_setAccount','UA-XXXXX-X'],['_trackPageview'],['_trackPageLoadTime']];
    (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];g.async=1;
    g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
    s.parentNode.insertBefore(g,s)}(document,'script'));
  </script>

  <%= yield :scripts %>
</body>
</html>
