<% if @search.page.to_i > 1  %>
    if( $('.b-search-result__item').length < missings_count ) {
	   $('.b-search-result').append('<%= escape_javascript(render("missings_list")) %>');	
	}                                                                                    
<% else %>           
	$('.b-search-result').html('<%= escape_javascript(render("missings_list")) %>'); 
	missings_count = <%= @search.count %>;
	page = 1;   
<% end %>
                    
if( $('.b-search-result__item').length == missings_count ) {
	$('.b-search-result__more_button').hide();
} else {
	$('.b-search-result__more_button').show();
}