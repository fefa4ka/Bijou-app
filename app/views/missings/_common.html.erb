  <hr class="b-hr form" />
  
<div class="container_16">
<div class="grid_8">
<!-- Входим див, после hr -->

  <div class="b-form__field">
    <%= f.label :man_age, "Возраст", :class => "l-inline b-form__label" %><span class="t-medium b-form__ab_or"> или </span><%= f.label :birthday, "дата рождения", :class => "l-inline b-form__label" %>   
	<div class="clear"></div>      
	<div class="b-form__ab">
   	 <p class="b-form__ages">
	    <%= f.text_field :man_age, :class => "b-form__text_age" %> <span class="man_age_sign"><%= Russian.p f.object.man_age.to_i, 'год', 'года', 'лет' %> </span>               
	    <p class="b-form__birthday"> 
	    	<%= f.date_select :birthday, :order => [:day, :month, :year], :start_year => 1900, :end_year => Time.now.year, :prompt => { :day => "день", :month => "месяц", :year => "год" }  %>
		</p>     
	 </div>
  </div>

</div>
</div>

<div class="clear"></div>
 <hr class="b-hr form" />

<div class="container_16">
<div class="grid_16">
    
  <div class="b-form__field">
    <%= f.label :man_birthday, "Фотографии", :class => "b-form__label" %>
	<div class="b-form__button_corner l-left ui-corner-all">
	   <input id="add_photo" type="button" value="Добавить" class="t-medium">
	   <input id="upload_photo" name="missing_upload_photo" type="hidden" value=0>
	</div>
	

	<ul class="b-form__photos">
	<%= f.fields_for :photos do |photo_form| %> 
	  <% if photo_form.object.new_record? %>
		<li class="b-form__photo_field">
	    <%= photo_form.file_field :photo, :class => "invisible" %>
	 	</li>
	  <% else %>
	    <li class="b-form__photo">
			<%= image_tag photo_form.object.photo.url(:small), :size => "100x100", :class => "b-form__photo" %>
			<%= tag :input, { :type => "button", :value => "удалить", :class => "b-form__photo_delete red_action destroy" } %>
		</li>
      <% end %>
    <% end %>
	</ul>
	
	
	<div class="clear"></div>
  </div>
<!-- Container and grid_8 div closed in new.html.erb -->
