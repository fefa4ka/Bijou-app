  <ul class="b-form__gender_list">
    <li class="b-form__gender_element"> 
      <%= f.radio_button :gender, true  %><%= f.label :gender_true, "мужчина", :class => "b-form__radio_label"  %>
    </li>
    <li class="b-form__gender_element">
      <%= f.radio_button :gender, false  %><%= f.label :gender_false, "женщина", :class => "b-form__radio_label" %>
    </li>
  </ul>
