<div class="clear"></div>
<hr class="b-hr" />

<div class="container_16">
  <div class="grid_6">
	<%= label_tag "place_search", "1. Посещаемые места", :class => "b-form__label" %>
	<table class="b-form__place_search">
		<tr><td class="b-form__place_search_field">
			<%= text_field_tag "place_search", nil, :placeholder => "Адрес места", :class => "b-form__place_search_text_field"  %> 
		</td><td class="b-form__place_search_button">
			<%= tag :input, { :type => :button, :value => "Найти" } %>
		</td></tr>
	</table>
	
	<%= gmaps({ "map_options" => { "detect_location" => true, "center_on_user" => true, "zoom" => 8 } }) %>
  </div>
  <div class="grid_8">
	<%= @missing.places.inspect %>
    <% f.fields_for :places do |builder| %>
      <% render "place_fields", :f => builder %>
    <% end %>
   </div>

</div>
</div>
<!-- End grid_8 and container from new.html.erb -->

<div class="clear"></div>
<hr class="b-hr" />

<div class="container_16">   
