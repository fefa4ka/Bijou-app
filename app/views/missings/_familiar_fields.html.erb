<% if f.object.name %>
<b>Name: <%= f.object.name %></b><br>
<% else %>
<div class="b-form__nested">
  <div class="b-padding_1">	
  	<div class="b-form__field">
	    <%= f.label :name, "Как зовут знакомого", :class => "b-form__label" %>
	    <%= f.text_field :name, :class => "b-form__nested_field", :placeholder => "Фамилия имя отчество" %>
	  </div>
	  <div class="b-form__field">
	    <%= f.label :relations, "В каких отношениях состоят", :class => "b-form__label" %>
	    <ul class="b-form__radio_list">
	      <li class="b-form__radio_element">
	        <%= f.radio_button :relations, 1 %> <%= f.label :relations_1, "отец" %>
	      </li>
	      <li class="b-form__radio_element">
	        <%= f.radio_button :relations, 2 %> <%= f.label :relations_2, "мать" %>
	      </li>
	      <li class="b-form__radio_element">
	        <%= f.radio_button :relations, 3 %> <%= f.label :relations_3, "брат" %>
	      </li>
		  <li class="b-form__radio_element">
	        <%= f.radio_button :relations, 4 %> <%= f.label :relations_4, "сестра" %>
	      </li>
	      <li class="b-form__radio_element b-form__subfield">
	        <%= f.radio_button :relations, 0 %> <%= f.label :relations_0, "другие" %> <br />
	        <%= f.text_field :relations, :class => "b-form__text_another" %> 
	      </li>
	    </ul>
	  </div>
	  <div class="b-form__field">
	    <%= f.label :relations_quality, "Оцените качество этих отношений", :class => "b-form__label" %>
		<p class="b-form__field_description">Отметьте «хорошо», если это здоровые, нормальные или ничем не примечательные отношения. Если это были плохие или что-то странное происходило в последнее время, отметьте «напряженные».</p>
	    <ul class="b-form__radio_list b-form__subfield">
	      <li class="b-form__radio_element">
	        <%= f.radio_button :relations_quality, 1 %> <%= f.label :relations_quality_1, "хорошие" %>
	      </li>
	      <li class="b-form__radio_element">
	        <%= f.radio_button :relations_quality, 2 %> <%= f.label :relations_quality_2, "напряженные" %>
	      </li>
	      <li class="b-form__radio_element">
	        <%= f.radio_button :relations_quality, 0 %> <%= f.label :relations_quality_0, "не знаю" %>
	      </li>
	    </ul> 
	  </div>
	  <div class="b-form__field">
	    <%= f.label :description, "Опишите, что это за человек и как они общались", :class => "b-form__label" %>
	    <%= f.text_area :description, :rows => 4, :class => "b-form__nested_field" %>   
	  </div>
	  <div class="b-form__field b-from__field_red">
		<%= f.check_box :seen_last_day %> <%= f.label :seen_last_day, "с этим человеком [name] общался в последний день" %>
	  </div>
   	  
  </div>
  <div class="b-form__nested_action_panel b-padding_1">
	<%= tag :input, { :type => "button", :value => "Добавить" } %>
  </div>
  
</div>
<% end %>