.b-button_social {
	width: 22px;              
	height: 22px;
	margin-right: 5px;
}               

.b-button_social .ui-icon{
	left: 2px !important;
	
	width: 16px;
	height: 16px;
}

.b-button_social.ui-state-active .ui-icon{
	top: 55%;
}

.b-button_social .ui-icon, .b-auth__button .ui-icon {
  background-image: url(<%= asset_path 'socials.png' %>); 
}

.b-auth__button.loggedin {
	background-image: url(/assets/arrow-d.png);
	background-repeat: no-repeat;
	background-position: 95% 60%;

	font-weight: bold;

    min-width: 93px;
}      

.b-auth__button.loggedin .ui-button-text {
	padding-right: .8em;
}

.b-auth__button.loggedin.ui-state-active {
	background-position: 95% 65%;
} 
.b-auth__button.loggedin.ui-state-active .ui-icon {
	top: 55%;
}         

