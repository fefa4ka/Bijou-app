.b-button-type-a {
	-moz-box-shadow:inset 0px 0px 0px 1px #a1527d;
	-webkit-box-shadow:inset 0px 0px 0px 1px #a1527d;
	box-shadow:inset 0px 0px 0px 1px #a1527d;
	background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #a04b78), color-stop(1, #923b65) );
	background:-moz-linear-gradient( center top, #a04b78 5%, #923b65 100% );
	filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#a04b78', endColorstr='#923b65');
	background-color:#a04b78;
	-moz-border-radius:3px;
	-webkit-border-radius:3px;
	border-radius:3px;
	border:1px solid #700947;
	display:inline-block;
	color:#ffffff;
	font-family:tahoma;
	font-size:12px;
	font-weight:normal;
	padding:6px 12px;
	text-decoration:none;
}.b-button-type-a:hover {
	background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #923b65), color-stop(1, #a04b78) );
	background:-moz-linear-gradient( center top, #923b65 5%, #a04b78 100% );
	filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#923b65', endColorstr='#a04b78');
	background-color:#923b65;
	color: white;
}.b-button-type-a:active {
	position:relative;
	top:1px;
}


