/* wrapper divs */
.b-form-checkbox, .b-form-radio { display: inline-block; position: relative; }
	
/* input, label positioning */
.b-form-checkbox input, 
.b-form-radio input {
	position: absolute;
	left: 2px;
	top: 3px;
	margin: 0;
	z-index: 0;    
	
	display: none;
}

.b-form-checkbox label, 
.b-form-radio label {
	display: inline-block;
	position: relative;
	/* z-index: 1; */
	line-height: 1.2em;
	padding: 0 0 0.3em 20px;  
	cursor: pointer;
	
	color: #666;
}


.b-form-checkbox label {
	background: url(<%= asset_path "checkbox.png" %>) no-repeat; 
}

.b-form-radio label { 
	background: url(<%= asset_path 'radiobutton.png' %>) no-repeat; 
}

.b-form-checkbox label, .b-form-radio label {
	background-position: -15px -19px;
}

.b-form-checkbox label.hover,
.b-form-checkbox label.focus,
.b-form-radio label.hover,
.b-form-radio label.focus {
	background-position: -15px -119px;
}

.b-form-checkbox label.checked, 
.b-form-radio label.checked {
	background-position: -15px -219px;
	
	color: #000;
}

.b-form-checkbox label.checkedHover, 
.b-form-checkbox label.checkedFocus {
	background-position: -15px -319px;
}

.b-form-checkbox label.focus, 
.b-form-radio label.focus {
	outline: 1px dotted #ccc;
}
                                   
        

